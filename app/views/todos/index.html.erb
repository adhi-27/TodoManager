<h1 class="TodoPage-Title">My Todo-list</h1>

    <section class="AddTodo">
      <input class="AddTodo-text" type="text" placeholder="What's next">
      <input class="AddTodo-date" type="date">
      <input class="AddTodo-button" type="button" value="Add">
    </section>

    <%= render partial: "todo-section", locals: {section_title: "Overdue", todos: Todo.overdue} %>
    <%= render partial: "todo-section", locals: {section_title: "Due Today", todos: Todo.due_today} %>
    <%= render partial: "todo-section", locals: {section_title: "Due Later", todos: Todo.due_later} %>
    </section>
