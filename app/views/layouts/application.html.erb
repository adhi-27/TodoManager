<!DOCTYPE html>
<html>
  <head>
    <title>Todo Manager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
      <p class= "UserHeader">Welcome <%=@current_user.fname %>! <%= link_to "sign-out", destroy_sessions_path, method: "delete" %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
